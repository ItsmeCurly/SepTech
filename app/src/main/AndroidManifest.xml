<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.septech.centauri">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".persistent.CentauriApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Centauri"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.business.forgotpasswordcode.BusinessForgotPasswordCodeActivity"></activity>
        <activity android:name=".ui.business.forgotpassword.BusinessForgotPasswordActivity" />
        <activity android:name=".ui.business.register.BusinessRegisterActivity" />
        <activity android:name=".ui.business.login.BusinessLoginActivity" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" /> <!-- <activity android:name=".ui.search.SearchActivity"/> -->
        <activity android:name=".ui.user.settings.SettingsActivity" />
        <activity android:name=".ui.user.register.RegisterActivity" />
        <activity android:name=".ui.user.forgotpassword.ForgotPasswordActivity" />
        <activity android:name=".ui.user.forgotpasswordcode.ForgotPasswordCodeActivity" />
        <activity android:name=".ui.user.login.LoginActivity" />
        <activity android:name=".ui.user.home.HomeActivity" /> <!-- <activity android:name=".MainActivity"/> -->
        <activity
            android:name=".ui.business.addlisting.AddListingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>