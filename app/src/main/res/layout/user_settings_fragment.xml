<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SettingsHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="11dp"
            android:text="@string/action_settings"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SettingsSearchBar"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SettingsHeaderText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/settings_search" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settingsButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SettingsSearchBar"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/accountBtn"
                app:layout_constraintBottom_toBottomOf="@id/accountBtn"
                app:layout_constraintEnd_toStartOf="@id/accountBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_person_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/accountBtn"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/accountBtn"
                android:textColor="#000000"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:rippleColor="#FFFFFF"
                app:strokeColor="#FFFFFF" />

            <ImageView
                android:id="@+id/proxima_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/proximaBtn"
                app:layout_constraintBottom_toBottomOf="@id/proximaBtn"
                app:layout_constraintEnd_toStartOf="@id/proximaBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_star_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/proximaBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/proximaBtn"
                android:textColor="#000000"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.125" />

            <ImageView
                android:id="@+id/notif_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/notificationsBtn"
                app:layout_constraintBottom_toBottomOf="@id/notificationsBtn"
                app:layout_constraintEnd_toStartOf="@id/notificationsBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_notification_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/notificationsBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/notificationsBtn"
                android:textColor="#000000"
                app:iconTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <ImageView
                android:id="@+id/appearence_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/appearenceBtn"
                app:layout_constraintBottom_toBottomOf="@id/appearenceBtn"
                app:layout_constraintEnd_toStartOf="@id/appearenceBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_appearance_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/appearenceBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/appearenceBtn"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.375" />

            <ImageView
                android:id="@+id/security_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/securityBtn"
                app:layout_constraintBottom_toBottomOf="@id/securityBtn"
                app:layout_constraintEnd_toStartOf="@id/securityBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_security_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/securityBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/privacyBtn"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/helpBtn"
                app:layout_constraintBottom_toBottomOf="@id/helpBtn"
                app:layout_constraintEnd_toStartOf="@id/helpBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_help_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/helpBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/helpBtn"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.625" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/locationBtn"
                app:layout_constraintBottom_toBottomOf="@id/locationBtn"
                app:layout_constraintEnd_toStartOf="@id/locationBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_location_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/locationBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/locationBtn"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75" />

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/aboutBtn"
                app:layout_constraintBottom_toBottomOf="@id/aboutBtn"
                app:layout_constraintEnd_toStartOf="@id/aboutBtn"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_about_foreground"
                app:tint="@color/centauri_red"/>

            <Button
                android:id="@+id/aboutBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="@string/aboutBtn"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias=".875" />

<!--            Arrows-->

            <ImageView
                android:id="@+id/account_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/accountBtn"
                app:layout_constraintTop_toTopOf="@+id/accountBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="214dp" />

            <ImageView
                android:id="@+id/proxima_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/proximaBtn"
                app:layout_constraintTop_toTopOf="@+id/proximaBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="261dp" />

            <ImageView
                android:id="@+id/notifications_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/notificationsBtn"
                app:layout_constraintTop_toTopOf="@+id/notificationsBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="311dp" />

            <ImageView
                android:id="@+id/appearence_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/appearenceBtn"
                app:layout_constraintTop_toTopOf="@+id/appearenceBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="361dp" />

            <ImageView
                android:id="@+id/privacy_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/securityBtn"
                app:layout_constraintTop_toTopOf="@+id/securityBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="411dp" />

            <ImageView
                android:id="@+id/help_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/helpBtn"
                app:layout_constraintTop_toTopOf="@+id/helpBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="463dp" />

            <ImageView
                android:id="@+id/location_arrow"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/locationBtn"
                app:layout_constraintTop_toTopOf="@+id/locationBtn"
                app:srcCompat="@drawable/ic_right_arrow_black"
                tools:layout_editor_absoluteY="513dp" />

            <ImageView
                android:id="@+id/about_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/arrow"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/aboutBtn"
                app:layout_constraintTop_toTopOf="@+id/aboutBtn"
                app:layout_constraintVertical_bias="0.015"
                app:srcCompat="@drawable/ic_right_arrow_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>