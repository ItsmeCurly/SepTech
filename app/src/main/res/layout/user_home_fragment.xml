<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/home_body_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home_view_all_items_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="96dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_view_all_items_icon" />

            <TextView
                android:id="@+id/home_view_all_items_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Items"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_view_all_items_btn"
                app:layout_constraintStart_toStartOf="@+id/home_view_all_items_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_view_all_items_btn" />

            <ImageButton
                android:id="@+id/home_my_orders_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_my_orders_icon" />

            <TextView
                android:id="@+id/home_my_orders_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:text="My Orders"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_my_orders_btn"
                app:layout_constraintStart_toStartOf="@+id/home_my_orders_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_my_orders_btn" />

            <ImageButton
                android:id="@+id/home_my_bids_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_view_all_items_text"
                app:srcCompat="@drawable/ic_my_bids_icon" />

            <TextView
                android:id="@+id/home_my_bids_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Bids"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_my_bids_btn"
                app:layout_constraintStart_toStartOf="@+id/home_my_bids_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_my_bids_btn" />

            <ImageButton
                android:id="@+id/home_order_history_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_my_orders_text"
                app:srcCompat="@drawable/ic_order_history_icon" />

            <TextView
                android:id="@+id/home_order_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_order_history_btn"
                app:layout_constraintStart_toStartOf="@+id/home_order_history_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_order_history_btn" />

            <ImageButton
                android:id="@+id/home_view_history_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_my_bids_text"
                app:srcCompat="@drawable/ic_view_history_icon" />

            <TextView
                android:id="@+id/home_view_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View History"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_view_history_btn"
                app:layout_constraintStart_toStartOf="@+id/home_view_history_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_view_history_btn" />

            <ImageButton
                android:id="@+id/home_need_help_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_order_history_text"
                app:srcCompat="@drawable/ic_need_help_icon" />

            <TextView
                android:id="@+id/home_view_history_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_need_help_btn"
                app:layout_constraintStart_toStartOf="@+id/home_need_help_btn"
                app:layout_constraintTop_toBottomOf="@+id/home_need_help_btn" />

            <TextView
                android:id="@+id/home_welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/home_welcome_text"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>