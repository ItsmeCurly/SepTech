<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Bottom Navigation Bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/centauri_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/home_body_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_top_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_view_all_items_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_view_all_items_icon" />

            <TextView
                android:id="@+id/home_view_all_items_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Items"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_view_all_items_icon"
                app:layout_constraintStart_toStartOf="@+id/home_view_all_items_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_view_all_items_icon" />

            <ImageView
                android:id="@+id/home_my_orders_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_my_orders_icon" />

            <TextView
                android:id="@+id/home_my_orders_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_my_orders_icon"
                app:layout_constraintStart_toStartOf="@+id/home_my_orders_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_my_orders_icon" />

            <ImageView
                android:id="@+id/home_my_bids_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_view_all_items_text"
                app:srcCompat="@drawable/ic_my_bids_icon" />

            <TextView
                android:id="@+id/home_my_bids_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Bids"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_my_bids_icon"
                app:layout_constraintStart_toStartOf="@+id/home_my_bids_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_my_bids_icon" />

            <ImageView
                android:id="@+id/home_order_history_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_my_orders_text"
                app:srcCompat="@drawable/ic_order_history_icon" />

            <TextView
                android:id="@+id/home_order_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_order_history_icon"
                app:layout_constraintStart_toStartOf="@+id/home_order_history_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_order_history_icon" />

            <ImageView
                android:id="@+id/home_view_history_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_my_bids_text"
                app:srcCompat="@drawable/ic_view_history_icon" />

            <TextView
                android:id="@+id/home_view_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View History"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_view_history_icon"
                app:layout_constraintStart_toStartOf="@+id/home_view_history_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_view_history_icon" />

            <ImageView
                android:id="@+id/home_need_help_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_order_history_text"
                app:srcCompat="@drawable/ic_need_help_icon" />

            <TextView
                android:id="@+id/home_view_history_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_need_help_icon"
                app:layout_constraintStart_toStartOf="@+id/home_need_help_icon"
                app:layout_constraintTop_toBottomOf="@+id/home_need_help_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>